<h2>Burger List</h2>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> burger/burger }}
    {{/unless}}
  {{/each}}
</ul>



<h2>Devoured Burger</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
      {{> burger/burger}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add a Burger</button>
</form>
